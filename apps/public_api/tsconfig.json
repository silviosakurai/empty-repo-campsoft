{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "lib": ["es2020"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["../../packages/core/src/*"]
    }
  },
  "include": ["src/**/*", "../../packages/core/src/common/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
