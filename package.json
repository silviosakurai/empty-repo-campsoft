    "sonar:webhooks": "turbo run sonar --filter=webhooks",
    "sonar:websocket": "turbo run sonar --filter=websocket",
    "prepare": "[ \"$NODE_ENV\" != 'production' ] && husky install || echo 'In production'",
    "docker:public": "docker build -f apps/public_api/Dockerfile -t mania-public .",
    "docker:manager": "docker build -f apps/manager_api/Dockerfile -t mania-manager .",
    "docker:tools": "docker build -f apps/tools/Dockerfile -t mania-tools .",
    "docker:webhooks": "docker build -f apps/webhooks/Dockerfile -t mania-webhook .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
