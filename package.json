  "scripts": {
    "dev": "turbo run dev",
    "dev:manager": "turbo run dev --filter=manager",
    "dev:webhooks": "turbo run dev --filter=webhooks",
    "dev:public": "turbo run dev --filter=public",
    "dev:websocket": "turbo run dev --filter=websocket",
